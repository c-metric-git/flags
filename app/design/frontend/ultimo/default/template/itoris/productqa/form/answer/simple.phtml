<?php /** @var $this Itoris_ProductQa_Block_Form_Answer */ ?>

<?php $answers = $this->getAnswers() ?>
<div class="ie_height_bug"></div>
<div class="answers_ajax_smooth_back">
	<div class="answers_ajax_smooth">
<?php if (!empty($answers)): ?>
	<div class="ie_height_bug_space"></div>
	<?php foreach ($answers as $answer): ?>
		<div class="answer">
			<div class="answer_text">
				<div class="text_blue qa"><?php echo $this->__('A') ?>:</div>
				<div class="text_black qa_text"><?php echo $this->getDataHelper()->prepareHtmlText($answer['content']) ?></div><br/>
			</div>
			<div class="a_info_block">
				<div class="a_info">
					<div class="info">
						<span class="red"><?php echo $this->__('by') .' ' . htmlspecialchars($answer['nickname']) ?></span>
						<span class="gray"><?php echo Mage::helper('itoris_productqa')->getDateStr($answer['date']) ?></span>
						<span><?php echo $answer['good'] ?></span> <div class="icon_good" onclick="answer_id=<?php echo (int)$answer['id'] ?>;" title="<?php echo htmlspecialchars($this->__('Helpful')) ?>"></div>
						<span><?php echo $answer['bad'] ?></span>  <div class="icon_bad" onclick="answer_id=<?php echo (int)$answer['id'] ?>;" title="<?php echo htmlspecialchars($this->__('Not Helpful')) ?>"></div>
						<div class="icon_inappr" onclick="answer_id=<?php echo (int)$answer['id'] ?>;" title="<?php echo htmlspecialchars($this->__('Report as Inappropriate')) ?>"></div>
					</div>
				</div>
			</div>
		</div>
		<?php endforeach; ?>
	<div class="a_spacer"></div>
	</div>
</div>
<?php endif; ?>