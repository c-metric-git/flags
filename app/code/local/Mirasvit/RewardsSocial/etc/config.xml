<?xml version="1.0"?>
<config>
    <modules>
        <Mirasvit_RewardsSocial>
            <version></version>
        </Mirasvit_RewardsSocial>
    </modules>
    <global>
        <blocks>
            <rewardssocial>
                <class>Mirasvit_RewardsSocial_Block</class>
            </rewardssocial>
        </blocks>
        <models>
            <rewardssocial>
                <class>Mirasvit_RewardsSocial_Model</class>
                <resourceModel>rewardssocial_resource</resourceModel>
            </rewardssocial>
            <rewardssocial_resource>
                <class>Mirasvit_RewardsSocial_Model_Resource</class>
                <entities>
                </entities>
            </rewardssocial_resource>
        </models>
        <helpers>
            <rewardssocial>
                <class>Mirasvit_RewardsSocial_Helper</class>
            </rewardssocial>
        </helpers>
        <resources>
            <mst_rewardssocial_setup>
                <setup>
                    <module>Mirasvit_RewardsSocial</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mst_rewardssocial_setup>
        </resources>
        <events>
            <!--
            <magento_event_name>
                <observers>
                    <m_rewardssocial_observer>
                        <type>singleton</type>
                        <class>YourObserverClassName</class>
                        <method>yourFunctionName</method>
                    </m_rewardssocial_observer>
                </observers>
            </magento_event_name>
            -->
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <rewardssocial>
                    <file>mst_rewardssocial.xml</file>
                </rewardssocial>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mirasvit_RewardsSocial>
                    <files>
                        <default>Mirasvit_RewardsSocial.csv</default>
                    </files>
                </Mirasvit_RewardsSocial>
            </modules>
        </translate>
        <routers>
            <rewardssocial>
                <use>standard</use>
                <args>
                    <module>Mirasvit_RewardsSocial</module>
                    <frontName>rewardssocial</frontName>
                </args>
            </rewardssocial>
        </routers>
    </frontend>
    <admin>
        <routers>
            <rewardssocialadmin>
                <use>admin</use>
                <args>
                    <module>Mirasvit_RewardsSocial</module>
                    <frontName>rewardssocialadmin</frontName>
                </args>
            </rewardssocialadmin>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Mirasvit_RewardsSocial>
                    <files>
                        <default>Mirasvit_RewardsSocial.csv</default>
                    </files>
                </Mirasvit_RewardsSocial>
            </modules>
        </translate>
        <layout>
            <updates>
                <rewardssocial>
                    <file>mst_rewardssocial.xml</file>
                </rewardssocial>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <rewardssocial>
            <facebook>
                <is_active>1</is_active>
            </facebook>
            <twitter>
                <is_active>1</is_active>
            </twitter>
            <googleplus>
                <is_active>1</is_active>
            </googleplus>
            <pinterest>
                <is_active>1</is_active>
            </pinterest>
        </rewardssocial>
    </default>
</config>
