<?xml version="1.0"?>
<config>
    <tabs>
        <evince translate="label">
            <label>Ajax Add to Cart Extension</label>
            <sort_order>400</sort_order>
        </evince>
    </tabs>

    <sections>
        <ajaxaddtocart translate="label" module="ajaxaddtocart">
            <label>Ajax Add to Cart</label>
            <tab>evince</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <plugin_info>
                    <frontend_model>ajaxaddtocart/adminhtml_info</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </plugin_info>
                <general translate="label">
                    <label>Ajax add to cart Configuration</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>2</sort_order>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <update_blocks translate="label">
                            <label>Updated Blocks XML</label>
                            <comment>Give parent HTML tag ID of block to be updated</comment>
                            <frontend_model>ajaxaddtocart/adminhtml_url</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </update_blocks>
                    </fields>
                </general>
            </groups>
        </ajaxaddtocart>
    </sections>
</config>