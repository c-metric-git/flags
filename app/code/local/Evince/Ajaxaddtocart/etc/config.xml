<?xml version="1.0"?>

<config>
    <modules>
        <Evince_Ajaxaddtocart>
            <version>2.0.1</version>
        </Evince_Ajaxaddtocart>
    </modules>
    <global>
        <models>
            <ajaxaddtocart>
                <class>Evince_Ajaxaddtocart_Model</class>
            </ajaxaddtocart>
        </models>
        <blocks>
            <ajaxaddtocart>
                <class>Evince_Ajaxaddtocart_Block</class>
            </ajaxaddtocart>
        </blocks>
        <helpers>
            <ajaxaddtocart>
                <class>Evince_Ajaxaddtocart_Helper</class>
            </ajaxaddtocart>
        </helpers>
        <rewrite>
            <Evince_ajaxaddtocart_checkout_cart>
                <from><![CDATA[#^/checkout/cart/#]]></from>
                <to>/ajaxaddtocart/checkout_cart/</to>
            </Evince_ajaxaddtocart_checkout_cart>
        </rewrite>
    </global>
    <frontend>
        <routers>
            <ajaxaddtocart>
                <use>standard</use>
                <args>
                    <module>Evince_Ajaxaddtocart</module>
                    <frontName>ajaxaddtocart</frontName>
                </args>
            </ajaxaddtocart>
        </routers>
        <events>
            <checkout_cart_add_product_complete>
                <observers>
                    <ajaxaddtocart>
                        <type>singleton</type>
                        <class>ajaxaddtocart/observer</class>
                        <method>addToCartEvent</method>
                    </ajaxaddtocart>
                </observers>
            </checkout_cart_add_product_complete>
            <checkout_cart_update_item_complete>
                <observers>
                    <ajaxaddtocart>
                        <type>singleton</type>
                        <class>ajaxaddtocart/observer</class>
                        <method>updateItemEvent</method>
                    </ajaxaddtocart>
                </observers>
            </checkout_cart_update_item_complete>
            
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <ajaxaddtocart>
                        <class>ajaxaddtocart/observer</class>
                        <method>getConfigurableOptions</method>
                    </ajaxaddtocart>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
         
            <controller_action_predispatch_checkout_cart_add>
                <observers>
                    <ajaxaddtocart>
                        <type>singleton</type>
                        <class>ajaxaddtocart/observer</class>
                        <method>getGroupProductOptions</method>
                    </ajaxaddtocart>
                </observers>
            </controller_action_predispatch_checkout_cart_add>
        </events>
        <layout>
            <updates>
                <ajaxaddtocart>
                    <file>ajaxaddtocart.xml</file>
                </ajaxaddtocart>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ajaxaddtocart>
                                            <title>Ajax add to cart Settings</title>
                                        </ajaxaddtocart>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <ajaxaddtocart>
            <general>
                <enable>1</enable>
                <update_blocks>a:2:{s:2:"id";a:4:{i:0;s:17:".block.block-cart";i:1;s:14:".header .links";i:2;s:26:".checkout-cart-index .cart";i:3;s:16:".header-minicart";}s:3:"xml";a:4:{i:0;s:12:"cart_sidebar";i:1;s:9:"top.links";i:2;s:13:"checkout.cart";i:3;s:13:"minicart_head";}}</update_blocks>
            </general>
        </ajaxaddtocart>
    </default>
</config>
