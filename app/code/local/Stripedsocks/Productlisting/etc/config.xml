<?xml version="1.0"?>
<config>
    <modules>
        <Stripedsocks_Productlisting>
            <version>1.0.0</version>
        </Stripedsocks_Productlisting>
    </modules>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <product_list_toolbar>Stripedsocks_Productlisting_Block_Product_List_Toolbar</product_list_toolbar>
                    <product_list>Stripedsocks_Productlisting_Block_Product_List</product_list>
                </rewrite>
            </catalog>
			<checkout>
				<rewrite>
					<cart_crosssell>Stripedsocks_Productlisting_Block_Checkout_Cart_Crosssell</cart_crosssell>
				</rewrite>
			</checkout>
                <!-- <bundle>
                <rewrite>
                    <Catalog_Product_View_Type_Bundle_Option>Stripedsocks_Productlisting_Block_Catalog_Product_View_Type_Bundle_Option
                    </Catalog_Product_View_Type_Bundle_Option>
                </rewrite>
            </bundle> -->
        </blocks>
        <models>
            <catalog>
                <rewrite>
                    <product_url>Stripedsocks_Productlisting_Model_Product_Url</product_url>
                    <category>Stripedsocks_Productlisting_Model_Category</category>
					<url>Stripedsocks_Productlisting_Model_Url</url>  
                </rewrite>
            </catalog>
            <!--<core_resource>
                <rewrite>
                    <url_rewrite>Stripedsocks_Productlisting_Model_Resource_Url_Rewrite</url_rewrite>
                </rewrite>
            </core_resource> -->
        </models>
		<resources>
            <productlisting_setup>
                <setup>
                    <module>Stripedsocks_Productlisting</module>
					<class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productlisting_setup>
            <productlisting_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productlisting_write>
            <productlisting_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productlisting_read>
             <bundlecolor_setup>
                  <setup>
                      <module>Stripedsocks_Productlisting</module>
                  </setup>
                  <connection>
                      <use>core_setup</use>
                  </connection>
             </bundlecolor_setup>
             <bundle_isfixedkit_setup>
                  <setup>
                      <module>Stripedsocks_Productlisting</module>
                  </setup>
                  <connection>
                      <use>core_setup</use>
                  </connection>
             </bundle_isfixedkit_setup>
        </resources>
    </global>
</config>
