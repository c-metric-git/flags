<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <msbase>
                                        <title>Magespot - Extensions Information</title>
                                    </msbase>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <events>
        <controller_action_predispatch>
            <observers>
                <msbase_upds>
                    <type>singleton</type>
                    <class>msbase/feed</class>
                    <method>check</method>
                </msbase_upds>
            </observers>
        </controller_action_predispatch>
    </events>
</config>